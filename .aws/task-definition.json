{
  "family": "talentradar-config-server",
  "executionRoleArn": "${execution_role_arn}",
  "taskRoleArn": "${task_role_arn}",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "config-server",
      "image": "${ecr_repository_url}:latest",
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/talentradar-config-server",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "portMappings": [
        {
          "containerPort": 8085,
          "hostPort": 8085,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "production"
        },
        {
          "name": "SERVER_PORT",
          "value": "8085"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget -q --spider http://localhost:8085/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "cpu": 512,
      "memory": 1024
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "tags": {
    "Project": "TalentRadar",
    "ManagedBy": "GitHub-Actions",
    "Service": "ConfigServer"
  }
}
